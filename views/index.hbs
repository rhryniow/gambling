<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
        {{#unless showButton}}
            <a  href="/login">Log in</a>
        {{/unless}}
        <div class="mdc-data-table">
            <div class="mdc-data-table__table-container">
                <table class="mdc-data-table__table" border="1" width="40%", align="center" >
                    <thead>
                    <tr class="mdc-data-table__header-row" >
                        <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric" role="columnheader">Number</th>
                        <th class="mdc-data-table__header-cell" role="columnheader">Name</th>
                        <th class="mdc-data-table__header-cell" role="columnheader">Surname</th>
                        <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric"  role="columnheader">Cash</th>
                        {{#if showButton}}
                            <th class="mdc-data-table__header-cell" role="columnheader">Add Money</th>
                        {{/if}}
                    </tr>
                    </thead>
                    <tbody class="mdc-data-table__content">
                    {{#each players}}
                        <tr class="mdc-data-table__row">
                            <td class="mdc-data-table__cell mdc-data-table__cell--numeric">{{@index}}</td>
                            <td class="mdc-data-table__cell ">{{this.name}}</td>
                            <td class="mdc-data-table__cell ">{{this.surname}}</td>
                            <td class="mdc-data-table__cell mdc-data-table__cell--numeric">{{this.cash}}</td>
                            {{#if ../showButton}}
                                <td><button onclick="window.location = './change?id={{this.id}}'"  class = "moneybtn">+</button></td>
                            {{/if}}
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
